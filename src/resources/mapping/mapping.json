{
    "Linux": {
        "theme_base": "../themes/",
        "cmd": {
            "command": "{command}"
        },
        "caqtdm":{
            "command": "caqtdm {param} {macros} {panel}",
            "arg_flags": {"macros": "-macro"}
        },
        "medm":{
            "command": "medm -x {param} {macros} {panel}",
            "arg_flags": {"macros": "-macro"}
        },
        "pep":{
            "command": "pep {param} {panel}",
            "arg_flags": {"panel": "-f"}
        }
    },
